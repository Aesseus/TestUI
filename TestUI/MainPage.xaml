<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestUI.MainPage">
    <StackLayout>

        <Grid>

            <!--Header-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" BackgroundColor="#23a0a9" Padding="10">
                <Label Text="Rideeo" FontAttributes="Bold" FontSize="20" TextColor="#ffffff"/>
            </StackLayout>

            <!--Body-->
            <StackLayout Grid.Row="1" Padding="10">
                <Label Text="Welcome to Rideeo" FontAttributes="Bold" FontSize="18"/>
                <Label Text="Find your ride with just a few taps" FontSize="14"/>
                <Image Source="Resources/Images/rideeo_logo_trademark_f5a614.png" Aspect="AspectFit"
                       HeightRequest="100"
                       WidthRequest="100"/>

                <Button Text="Get Started" BackgroundColor="#f5a614" TextColor="#ffffff"/>
            </StackLayout>
        </Grid>
    </StackLayout>

</ContentPage>
